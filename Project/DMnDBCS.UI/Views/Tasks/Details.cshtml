@model DMnDBCS.Domain.Entities.Task

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div class="container mt-4">
    <!-- Task Info -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h1>@Model.Title</h1>
            <div class="text-muted small">
                <p>Project ID: @Model.ProjectId</p>
                <p>Executor ID: @Model.ExecutorId</p>
            </div>
            <p class="lead text-muted">@Model.Description</p>
            <p>Status: @Model.StatusName</p>
            <div class="text-muted">
                <span class="me-3">Creation: @Model.CreationDate</span>
                <span>Completion: @Model.CompletionDate</span>
            </div>
        </div>
    </div>

    <div class="row">
        <!-- Task Comments -->
        <div class="col-lg-8">
            <h4 class="mb-3">Comments</h4>
            @Html.ActionLink("Create", "Create", "TaskComments", new { taskId = Model.Id }, new { @class = "btn btn-outline-primary btn-sm mb-2" })
            <div class="row">
                @if (ViewBag.Comments != null)
                {
                    @foreach (var item in ViewBag.Comments)
                    {
                        <div class="col-md-6 mb-3">
                            <div class="card">
                                <div class="card-body">
                                    <div class="d-flex justify-content-between align-items-start mb-2">
                                        <small class="text-muted">ID: @item.Id</small>
                                        <small class="text-muted">Author ID: @item.AuthorId</small>
                                    </div>
                                    <p class="card-text">@item.Content</p>
                                    <div class="mt-3 pt-3 border-top">
                                        <div class="row small text-muted">
                                            <div class="col-6">
                                                <strong>Creation Date:</strong><br>
                                                @item.CreationDate
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="card-footer bg-transparent">
                                    <div class="btn-group w-100" role="group">
                                    @if (ViewBag.UserId == item.AuthorId)
                                    {
                                        @Html.ActionLink("Edit", "Edit", "TaskComments", new { id = item.Id }, new { @class = "btn btn-outline-secondary btn-sm" })
                                        @Html.ActionLink("Delete", "Delete", "TaskComments", new { id = item.Id }, new { @class = "btn btn-outline-danger btn-sm" })
                                    }
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                }
                else
                {
                    <p>No comments</p>
                }
            </div>
        </div>
    </div>
</div>
<div>
    @if (TempData["FromProject"] != null && (bool)TempData["FromProject"]!)
    {
        <a asp-action="Details" asp-controller="Projects" asp-route-id="@Model.ProjectId">Back to Project</a>
    }
    else
    {
        <a asp-action="Index">Back to List</a>
    }
</div>
