@model IEnumerable<DMnDBCS.Domain.Entities.Task>

@{
    ViewData["Title"] = "Tasks";
}

<h1>Tasks</h1>

<div class="row">
    @if (Model != null && Model.Any())
    {
        @foreach (var item in Model)
        {
            <div class="col-md-6 mb-3">
                <div class="card h-100">
                    <div class="card-body">
                        <div class="d-flex justify-content-between align-items-start mb-2">
                            <small class="text-muted">ID: @Html.DisplayFor(modelItem => item.Id)</small>
                            <small class="text-muted">Project ID: @Html.DisplayFor(modelItem => item.ProjectId)</small>
                        </div>
                        <h5 class="card-title">@Html.DisplayFor(modelItem => item.Title)</h5>
                        <p class="card-text">@Html.DisplayFor(modelItem => item.Description)</p>
                        <small class="text-muted">Status: @Html.DisplayFor(modelItem => item.StatusName)</small>

                        <div class="mt-3 pt-3 border-top">
                            <div class="row small text-muted">
                                <div class="col-6">
                                    <strong>Creation Date:</strong><br>
                                    @Html.DisplayFor(modelItem => item.CreationDate)
                                </div>
                                <div class="col-6">
                                    <strong>Completion Date:</strong><br>
                                    @Html.DisplayFor(modelItem => item.CompletionDate)
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="card-footer bg-transparent">
                        <div class="btn-group w-100" role="group">
                            @Html.ActionLink("Details", "Details", new { id = item.Id, isFromProject = false }, new { @class = "btn btn-outline-primary btn-sm" })
                            @Html.ActionLink("Edit", "Edit", new { id = item.Id, isFromProject = false }, new { @class = "btn btn-outline-secondary btn-sm" })
                            @if (item.CanDelete!.Value)
                            {
                                @Html.ActionLink("Delete", "Delete", new { id = item.Id, isFromProject = false }, new { @class = "btn btn-outline-danger btn-sm" })
                            }
                        </div>
                    </div>
                </div>
            </div>
        }
    }
    else
    {
        <p>No tasks</p>
    }
</div>
