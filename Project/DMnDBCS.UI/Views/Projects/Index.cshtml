@model IEnumerable<DMnDBCS.Domain.Entities.Project>

@{
    ViewData["Title"] = "Projects";
}

<h1>Projects</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<div class="row">
    @if (Model != null && Model.Any())
    {
        @foreach (var item in Model)
        {
            <div class="col-md-6 col-lg-4 mb-4">
                <div class="card h-100">
                    <div class="card-body">
                        <div class="d-flex justify-content-between align-items-start mb-2">
                            <small class="text-muted">ID: @Html.DisplayFor(modelItem => item.Id)</small>
                            @if (item.UserRole != null)
                            {
                                <strong>Role: @item.UserRole</strong>
                            }
                        </div>
                        <h5 class="card-title">@Html.DisplayFor(modelItem => item.Title)</h5>
                        <p class="card-text">@Html.DisplayFor(modelItem => item.Description)</p>

                        <div class="mt-3 pt-3 border-top">
                            <div class="row small text-muted">
                                <div class="col-6">
                                    <strong>Start Date:</strong><br>
                                    @Html.DisplayFor(modelItem => item.StartDate)
                                </div>
                                <div class="col-6">
                                    <strong>End Date:</strong><br>
                                    @Html.DisplayFor(modelItem => item.EndDate)
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="card-footer bg-transparent">
                        <div class="btn-group w-100" role="group">
                            @Html.ActionLink("Details", "Details", new { id = item.Id }, new { @class = "btn btn-outline-primary btn-sm" })
                            @if (item.UserRole != null && item.UserRole == "Admin")
                            {
                                @Html.ActionLink("Edit", "Edit", new { id = item.Id }, new { @class = "btn btn-outline-secondary btn-sm" })
                                @Html.ActionLink("Delete", "Delete", new { id = item.Id }, new { @class = "btn btn-outline-danger btn-sm" })
                            }
                        </div>
                    </div>
                </div>
            </div>
        }
    }
    else
    {
        <p>No projects</p>
    }
</div>
