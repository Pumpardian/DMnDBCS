@model DMnDBCS.Domain.Entities.Project

@{
    ViewData["Title"] = "Project Details";
}

<h1>Details</h1>

<div class="container mt-4">
    <!-- Project Info -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h1>@Model.Title</h1>
            <p class="lead text-muted">@Model.Description</p>
            <div class="text-muted">
                <span class="me-3">Start: @Model.StartDate</span>
                <span>End: @Model.EndDate</span>
            </div>
        </div>
    </div>

    <div class="row mb-5">
        <!-- Project Resources -->
        <div col-lg-8>
            <h4 class="mb-3">Resources</h4>
            @if(Model.UserRole != null && (Model.UserRole == "Admin" || Model.UserRole == "Project Manager"))
            {
                @Html.ActionLink("Create", "Create", "ProjectResources", new { projectId = Model.Id }, new { @class = "btn btn-outline-primary btn-sm mb-2" })
            }
            <div class="row">
                @if (ViewBag.Resources != null)
                {
                    @foreach (var item in ViewBag.Resources)
                    {
                        <div class="col-md-6 mb-3">
                            <div class="card">
                                <div class="card-body">
                                    <div class="d-flex justify-content-between align-items-start mb-2">
                                        <small class="text-muted">ID: @item.Id</small>
                                    </div>
                                    <h5 class="card-title">@item.Type</h5>
                                    <p class="card-text">@item.Description</p>
                                </div>
                                <div class="card-footer bg-transparent">
                                    <div class="btn-group w-100" role="group">
                                        @if (Model.UserRole != null && (Model.UserRole == "Admin" || Model.UserRole == "Project Manager"))
                                        {
                                            @Html.ActionLink("Edit", "Edit", "ProjectResources", new { id = item.Id }, new { @class = "btn btn-outline-secondary btn-sm" })
                                            @Html.ActionLink("Delete", "Delete", "ProjectResources", new { id = item.Id }, new { @class = "btn btn-outline-danger btn-sm" })
                                        }
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                }
                else
                {
                    <p>No resources</p>
                }
            </div>
        </div>
    </div>

    <hr />

    <div class="container-fluid">
        <div class="row">
            <!-- Project Tasks -->
            <div class="col-lg-8">
                <div class="d-flex justify-content-between align-items-center mb-4">
                    <h4 class="mb-0">Tasks</h4>
                    @if(Model.UserRole != null && (Model.UserRole == "Admin" || Model.UserRole == "Project Manager"))
                    {
                        @Html.ActionLink("Create", "Create", "Tasks", new { projectId = Model.Id }, new { @class = "btn btn-primary btn-sm" })
                    }
                </div>

                <div class="row">
                    @if (ViewBag.Tasks != null)
                    {
                        @foreach (var item in ViewBag.Tasks)
                        {
                            <div class="col-md-6 mb-3">
                                <div class="card h-100 shadow-sm">
                                    <div class="card-body">
                                        <div class="d-flex justify-content-between align-items-start mb-2">
                                            <small class="text-muted">ID: @item.Id</small>
                                            <small class="text-muted">Executor ID: @item.ExecutorId</small>
                                        </div>
                                        <h5 class="card-title">@item.Title</h5>
                                        <p class="card-text">@item.Description</p>
                                        <div class="mb-2">
                                            <span class="badge bg-info">@item.StatusName</span>
                                        </div>

                                        <div class="mt-3 pt-3 border-top">
                                            <div class="row small text-muted">
                                                <div class="col-6">
                                                    <strong>Creation Date:</strong><br>
                                                    @item.CreationDate
                                                </div>
                                                <div class="col-6">
                                                    <strong>Completion Date:</strong><br>
                                                    @item.CompletionDate
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="card-footer bg-transparent">
                                        <div class="btn-group w-100" role="group">
                                            @if (Model.UserRole != null)
                                            {
                                                @Html.ActionLink("Details", "Details", "Tasks", new { id = item.Id, isFromProject = true }, new { @class = "btn btn-outline-primary btn-sm" })
                                            }
                                            @if (Model.UserRole != null && (Model.UserRole == "Admin" || Model.UserRole == "Project Manager") || item.ExecutorId == ViewBag.UserId)
                                            {
                                                @Html.ActionLink("Edit", "Edit", "Tasks", new { id = item.Id, isFromProject = true }, new { @class = "btn btn-outline-secondary btn-sm" })
                                            }
                                            @if (Model.UserRole != null && (Model.UserRole == "Admin" || Model.UserRole == "Project Manager"))
                                            {
                                                @Html.ActionLink("Delete", "Delete", "Tasks", new { id = item.Id, isFromProject = true }, new { @class = "btn btn-outline-danger btn-sm" })
                                            }
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }
                    }
                    else
                    {
                        <div class="col-12">
                            <div class="alert alert-info text-center">
                                <i class="fas fa-tasks me-2"></i>No tasks available for this project
                            </div>
                        </div>
                    }
                </div>
            </div>

            <!-- Members Panel - Right Side -->
            <div class="col-lg-4">
                <div class="card shadow-sm">
                    <div class="card-header bg-primary text-white">
                        <h5 class="card-title mb-0">
                            <i class="fas fa-users me-2"></i>Project Members
                        </h5>
                    </div>
                    @if (ViewBag.Members != null && ViewBag.Members.Count > 0)
                    {
                        @foreach (var item in ViewBag.Members)
                        {
                            <div class="card-body">
                                <div class="d-flex align-items-center p-2 border rounded">
                                    <div class="bg-primary text-white rounded-circle me-3 d-flex align-items-center justify-content-center"
                                            style="width: 40px; height: 40px; font-size: 1rem; font-weight: bold;">
                                        @item.UserName.Substring(0, 1)
                                    </div>
                                    <div class="flex-grow-1">
                                        <div class="fw-bold">@item.UserName</div>
                                        <small class="text-muted">@item.RoleName</small>
                                    </div>
                                    <div class="dropdown">
                                        <button class="btn btn-sm btn-outline-secondary dropdown-toggle" type="button" data-bs-toggle="dropdown">
                                            <i class="fas fa-ellipsis-v"></i>
                                        </button>
                                        <ul class="dropdown-menu">
                                            <li>
                                                @Html.ActionLink("View Profile", "Details", "UserProfiles", new { id = item.UserId }, new { @class = "dropdown-item" })
                                            </li>
                                            @if (Model.UserRole != null && Model.UserRole == "Admin")
                                            {
                                                <li>
                                                    @Html.ActionLink("Edit", "Edit", "UserRoles", new { userId = item.UserId, projectId = item.ProjectId }, new { @class = "dropdown-item" })
                                                </li>
                                            }
                                            @if (Model.UserRole != null && Model.UserRole == "Admin" || item.UserId == ViewBag.UserId)
                                            {
                                                <li>
                                                    @Html.ActionLink("Remove", "Delete", "UserRoles", new { userId = item.UserId, projectId = item.ProjectId }, new { @class = "dropdown-item" })
                                                </li>
                                            }
                                        </ul>
                                    </div>
                                </div>
                            </div>
                        }
                    }
                    else
                    {
                        <div class="text-center text-muted py-3">
                            <i class="fas fa-user-slash fa-2x mb-2"></i>
                            <p>No members assigned to this project</p>
                        </div>
                    }
                    @if(Model.UserRole != null && (Model.UserRole == "Admin" || Model.UserRole == "Project Manager"))
                    {
                        <div class="card-footer bg-light">
                            @Html.ActionLink("Add", "Create", "UserRoles", new { projectId = Model.Id }, new { @class = "btn btn-outline-primary btn-sm" })
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
<div>
    <a asp-action="Index">Back to List</a>
</div>